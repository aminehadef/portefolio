{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}
{% block body %}
    <script src='https://www.google.com/recaptcha/api.js'></script>
    <main class="container">
        <div class="jumbotron aboutMe">
            <h2>All Contact</h2>
            <hr class="my-4">
            <p>
                Lorem ipsum dolor sit amet consectetur adipisicing elit. Enim reprehenderit rem temporibus, consectetur quia magnam eum eveniet, culpa earum saepe unde ea quasi cupiditate rerum numquam omnis molestiae quidem dolorem!
            </p>
        </div>
        <div class="container-fluid d-flex flex-wrap">
            {% for contact in contacts %}
                <div class="card c b" style="width: 18rem;">
                    <i class="{{ contact.class }}"></i>
                    <div class="card-body text-center">
                        <h5 class="card-title">{{ contact.title }}</h5>
                        <p class="card-text">{{ contact.contact }}</p>
                    </div>
                </div>
            {% endfor %}
        </div>
        <div class="container">
            {{form_start(form)}}
                <div class="contForm">
                    <div class="row">
                        <div class="col-md-5">{{form_row(form.firstname)}}</div>
                        <div class="col-md-5">{{form_row(form.lastname)}}</div>
                    </div>
                    <div class="row">
                        <div class="col-md-5">{{form_row(form.email)}}</div>
                        <div class="col-md-5">{{form_row(form.phon)}}</div>
                    </div>
                    <div class="row">
                        <div class="col-md-10">{{form_row(form.message)}}</div>
                    </div>
                    <div class="g-recaptcha" data-sitekey="6LcSW4kUAAAAABWtmo4RXiUVcYxjXCfogfZ8ecna"></div>
                    <button class="col-md-2 btn btn-primary">Send</button>
                </div>        
            {{form_end(form)}}
        </div>
    </main>
{% endblock %}
